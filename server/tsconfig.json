{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["ESNext"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "types": ["node"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}